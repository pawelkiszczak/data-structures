   "source": [
    "# Reverse a string using a recursive function"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 8,
   "id": "5eba91da",
   "metadata": {},
   "outputs": [],
   "source": [
    "def reverse(s):\n",
    "    \n",
    "    if len(s) == 1:\n",
    "        return s\n",
    "    \n",
    "    else:\n",
    "        return s[len(s)-1] + reverse(s[:len(s)-1])"
   ]
  },
